{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2021",
        "outDir": "out",
        "lib": ["es2021"],
        "sourceMap": true,
        "rootDir": ".",
        "strict": true,
        "useUnknownInCatchVariables": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "newLine": "LF"
    },
    "exclude": ["node_modules", ".vscode-test"],
    "include": ["src", "tests"]
}
